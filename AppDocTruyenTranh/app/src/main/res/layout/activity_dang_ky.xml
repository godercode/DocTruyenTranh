<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DangKy">

    <TextView
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up With"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="37sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/img4"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/img6" />
    </LinearLayout>

    <TextView

        android:id="@+id/textView3"
        android:layout_marginLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="17sp"
        android:text="  Type your username"
        android:textColor="#9F9F9F" />

    <TextView
        android:id="@+id/textView6"
        android:layout_marginLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="17sp"/>
    <EditText
        android:drawableLeft="@drawable/ic_pass"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/etPasswword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="17sp"
        android:inputType="textPersonName"
        android:text="  Type your passwword"
        android:textColor="#9F9F9F" />
    <TextView
        android:id="@+id/textView7"
        android:layout_marginLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="17sp"/>
    <EditText
        android:drawableLeft="@drawable/ic_email"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="17sp"
        android:inputType="textPersonName"
        android:text="  Type your email"
        android:textColor="#9F9F9F" />
    <Button
        android:id="@+id/btnSingin"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/custom_button"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/tvSignin"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Have an account? Sign up now"
        android:textColor="#232323"
        android:textSize="15sp"/>
</LinearLayout>